@namespace Manu.Blazor.Components
@inherits ManuComponentBase

<div class="d-flex justify-content-center align-items-center @classSpinnerStyle @Class" style="height:50vh; @Style" @attributes="UserAttributes">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    @if (!string.IsNullOrEmpty(LoadingText))
    {
        <p class="px-2 mt-3">@LoadingText</p>
    }
</div>


